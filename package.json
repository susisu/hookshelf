{
  "name": "@susisu/hookshelf",
  "version": "0.2.1",
  "description": "Provides React hooks through context",
  "repository": "https://github.com/susisu/hookshelf.git",
  "author": "Susisu <susisu2413@yahoo.co.jp>",
  "license": "MIT",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src",
    "!src/**/*.{test,spec}.{ts,tsx}",
    "!src/**/__tests__"
  ],
  "scripts": {
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "eslint '*.js' src",
    "lint:prettier": "prettier --check '*.js' src",
    "lint-fix": "run-s lint-fix:eslint lint-fix:prettier",
    "lint-fix:eslint": "eslint --fix '*.js' src",
    "lint-fix:prettier": "prettier --write '*.js' src",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run --coverage",
    "test:dev": "vitest dev --coverage.enabled --coverage.reporter=text",
    "build": "tsc --build tsconfig.build.json",
    "clean": "run-s clean:tsc clean:rm",
    "clean:tsc": "tsc --build tsconfig.build.json --clean",
    "clean:rm": "rimraf lib",
    "prepublishOnly": "run-s clean lint typecheck test build"
  },
  "peerDependencies": {
    "react": "^16.14.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@susisu/eslint-config": "^0.0.78",
    "@testing-library/react": "^14.2.1",
    "@types/react": "^18.2.55",
    "@vitest/coverage-v8": "^1.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^24.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
